{
  "short_name": "נוכחות עובדים",
  "name": "אפליקציית נוכחות עובדים מתקדמת",
  "description": "אפליקציית נוכחות עובדים עם AI, מפות, דוחות והתראות חכמות",
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "logo192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any maskable"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any maskable"
    },
    {
      "src": "logo144.png",
      "type": "image/png",
      "sizes": "144x144",
      "purpose": "any"
    },
    {
      "src": "logo96.png",
      "type": "image/png",
      "sizes": "96x96",
      "purpose": "any"
    }
  ],
  "start_url": ".",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "theme_color": "#004466",
  "background_color": "#004466",
  "orientation": "portrait-primary",
  "lang": "he",
  "dir": "rtl",
  "scope": "/",
  "categories": ["business", "productivity", "utilities"],
  "screenshots": [
    {
      "src": "screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "לוח בקרה ראשי"
    },
    {
      "src": "screenshot2.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "ממשק נייד"
    }
  ],
  "shortcuts": [
    {
      "name": "נוכחות מהירה",
      "short_name": "נוכחות",
      "description": "סימון נוכחות מהיר",
      "url": "/employee",
      "icons": [
        {
          "src": "shortcut-attendance.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "דוחות",
      "short_name": "דוחות",
      "description": "צפייה בדוחות נוכחות",
      "url": "/manager?view=reports",
      "icons": [
        {
          "src": "shortcut-reports.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "מפה",
      "short_name": "מפה",
      "description": "מפת נוכחות עובדים",
      "url": "/manager?view=map",
      "icons": [
        {
          "src": "shortcut-map.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://attendance-app.vercel.app/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+attendance",
      "url": "/?action=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "attendance_file",
          "accept": ["text/csv", "application/vnd.ms-excel", "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"]
        }
      ]
    }
  }
}
